# API Configuration
VITE_API_BASE_URL=http://localhost:3000

# Feature Flags
VITE_ENABLE_ANALYTICS=false

# External Services
VITE_SPOTIFY_CLIENT_ID=your_spotify_client_id
VITE_SOUNDCLOUD_EMBED=true

# Optional: Formspree endpoint (replace with your form id)
# Example: https://formspree.io/f/your_form_id
VITE_FORMSPREE_ENDPOINT=

# Server-only secrets (do NOT expose these in client-side envs)
# For local server use; in production set these in your hosting provider
SERVER_SMTP_API_KEY=your_smtp_api_key
SERVER_ADMIN_TOKEN=change_me
